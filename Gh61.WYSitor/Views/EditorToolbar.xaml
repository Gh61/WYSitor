<UserControl x:Class="Gh61.WYSitor.Views.EditorToolbar"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="24" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Gh61.WYSitor;component/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ToolBarTray>
        <!-- CommandBar is managed dynamically, this is just for design purposes: -->
        <ToolBar x:Name="CommandBar" ToolBarTray.IsLocked="True">
            <ComboBox Width="128" />
            <ComboBox Width="42" />
            <Separator/>
            <ToggleButton><ContentControl Content="{StaticResource Icon_Bold}"></ContentControl></ToggleButton>
            <ToggleButton><ContentControl Content="{StaticResource Icon_Italic}"></ContentControl></ToggleButton>
            <ToggleButton><ContentControl Content="{StaticResource Icon_Underline}"></ContentControl></ToggleButton>
            <Separator/>
        </ToolBar>
    </ToolBarTray>
</UserControl>
