<UserControl x:Class="Gh61.WYSitor.Views.EditorToolbar"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ext="clr-namespace:Gh61.WYSitor.Code"
             xmlns:local="clr-namespace:Gh61.WYSitor.Views"
             xmlns:resx="clr-namespace:Gh61.WYSitor.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="800">
    <ToolBarTray>
        <ToolBar x:Name="CommandBar">
            <ToggleButton x:Name="ToggleBold" ToolTip="{ext:Resource resx:Resources.Text_Bold}">
                <Bold>B</Bold>
            </ToggleButton>
        </ToolBar>
    </ToolBarTray>
</UserControl>
